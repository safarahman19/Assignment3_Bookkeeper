<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <!--CSS files-->
  <link rel='stylesheet' href="/Content/app.css" />
  <link rel='stylesheet' href="/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
<!--Navigation Bar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Bookkeeper</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/books">My Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/ratings">Ratings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/about">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
<!--Page Content-->
    <main class="container">
        <div class="row">
        <div class="col-md-12">
        <br>
        <h2>Books</h2>
        <table class= "table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Author</th>
                    <th class="text-center">Originally Published</th>
                    <th class="text-center">Desciption</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>

    <!-- Repeat -->
                <% books.forEach(function(book) { %>
                    <tr>
                        <td class ="text-center"><%= book.name %></td>
                        <td class ="text-center"><%= book.author %></td>
                        <td class ="text-center"><%= book.originallyPublished %></td>
                        <td class ="text-center"><%= book.description %></td>
                        <td class="text-center">
                            <a href="/books/edit/<%= book._id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/books/delete/<%= book._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book?')">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/books/add" class="btn btn-sucess">Add book</a>
    </div>
    </div>
</main>


    <!--Script files-->
    <script src = "/Scripts/app.js"></script>
    <script src = "/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src = "/jquery/dist/jquery.min.js"></script>
  
</body>
</html>

